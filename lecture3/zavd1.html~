<?php

        function print_fun($a, $b = 0) {
              
		if ($b == 0) {$i = 0;

			while ($i <= $a) {

        		print "{$i}</br>";

			$i++;}

			}
			else {$i = $a;

			while ($i >= 0) {

        		print "{$i}</br>";

			$i--;}
			}

		}

print_fun(10, 1);


?>


<!DOCTYPE html>
<html>

 <head>
  <meta charset="utf-8">
    <title>Числа в порядковані</title>
 </head>
 
 <body>
	<?php 
	print_fun(10, 1);
	?>
</body>
</html>

